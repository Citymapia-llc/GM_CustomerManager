@code {
    [Parameter]
    public int activeTab { get; set; } = 1;
    [Parameter]
    public int ActiveOrderCount { get; set; }
    [Parameter]
    public EventCallback<PosNavigationModel> OnChangeTab { get; set; }

    public async Task ChangeTab(int activeTab, string url)
    {
        await this.OnChangeTab.InvokeAsync(new PosNavigationModel { TabId = activeTab, Url = url });
        this.activeTab = activeTab;
        StateHasChanged();
    }
}
